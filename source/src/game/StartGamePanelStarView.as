package src.game{	import net.fpp.common.starling.StaticAssetManager;	import net.fpp.common.util.NumberUtil;	import src.assets.Fonts;	import starling.display.Image;	import starling.display.Sprite;	import starling.events.Event;	import starling.text.TextField;	import starling.text.TextFormat;	import starling.utils.Align;	public class StartGamePanelStarView extends Sprite	{		private var _graphic:Image;		private var _description:TextField;		private var _value:uint;		private var _descriptionScore:uint;		public function StartGamePanelStarView( value:uint, descriptionScore:uint ):void		{			_value = value;			_descriptionScore = descriptionScore;			addEventListener( Event.ADDED_TO_STAGE, loaded );		}		private function loaded( event:Event ):void		{			removeEventListener( Event.ADDED_TO_STAGE, loaded );			addChild( _graphic = new Image( StaticAssetManager.instance.getTexture( "large_star_" + _value ) ) );			var textFormat:TextFormat = new TextFormat();			textFormat.font = Fonts.getAachenLightFont().name;			textFormat.size = 13;			textFormat.color = 0xFFFFFF;			textFormat.horizontalAlign = Align.LEFT;			textFormat.verticalAlign = Align.CENTER;			addChild( _description = new TextField( 150, _graphic.height, 'EARN ' + NumberUtil.formatNumber( _descriptionScore ) + ' SCORE', textFormat ) );			_description.touchable = false;			_description.x = _graphic.width + 10;			_description.y = 5;		}		override public function dispose():void		{			_graphic.removeFromParent( true );			_graphic = null;			_description.removeFromParent( true );			_description = null;			super.dispose();		}	}}