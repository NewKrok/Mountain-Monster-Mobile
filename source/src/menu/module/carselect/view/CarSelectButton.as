package src.menu.module.carselect.view{	import net.fpp.starling.StaticAssetManager;	import src.data.CarData;	import src.assets.CarDatas;	import src.data.PlayerData;	import src.events.PlayerDataEvent;	import starling.display.Button;	import starling.display.Image;	public class CarSelectButton extends Button	{		private var _carView:Image;		public function CarSelectButton():void		{			super( StaticAssetManager.instance.getTexture( 'car_select_button_back' ) );			PlayerData.addEventListener( PlayerDataEvent.CAR_ID_CHANGED, updateCarView );			updateCarView();		}		private function updateCarView():void		{			setCar( PlayerData.carID );		}		private function setCar( carID:uint ):void		{			var carData:CarData = CarDatas.getData( carID );			if( _carView )			{				_carView.removeFromParent( true );			}			addChild( _carView = new Image( StaticAssetManager.instance.getTexture( 'car_info_car_' + carData.graphicID ) ) );			this._carView.scaleX = this._carView.scaleY = .7;			this._carView.x = width / 2 - this._carView.width / 2;			this._carView.y = height / 2 - this._carView.height / 2;		}		override public function dispose():void		{			if( _carView )			{				_carView.removeFromParent( true );			}			super.dispose();		}	}}